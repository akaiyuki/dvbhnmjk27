    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/relative">



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circle"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/card1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/card1"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:id="@+id/linearrow1">

            <View
                android:layout_below="@+id/card1"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="1dip"
                android:background="@color/colorLightGary"
                android:id="@+id/divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card 1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>





    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circle"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/card1"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/card2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:id="@+id/card2"
        android:layout_toRightOf="@+id/card1"/>


        <LinearLayout
            android:layout_toRightOf="@+id/card1"
            android:layout_marginTop="15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:id="@+id/linearrow2">

            <View
                android:layout_below="@+id/card1"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="1dip"
                android:background="@color/colorLightGary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card 2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/linearrow1"
            android:src="@drawable/circle"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/card3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/card3"
            android:layout_below="@+id/linearrow1"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card3"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:id="@+id/linearrow3">

            <View
                android:layout_below="@+id/card1"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="1dip"
                android:background="@color/colorLightGary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card 3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>



    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/linearfive">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Skip"
                android:id="@+id/skip"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/button_background_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/button_background"/>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>

</ScrollView>
