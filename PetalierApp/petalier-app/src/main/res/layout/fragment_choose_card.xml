<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.syaona.petalierapp.fragment.ChooseCardFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:id="@+id/textchoose"
        android:layout_below="@+id/app_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="card"
        android:layout_below="@+id/textchoose"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorButtonInactive"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="19sp"
        android:id="@+id/textbox"/>

    <View
        android:layout_below="@+id/textbox"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="20dp"
        android:layout_height="5dip"
        android:background="@color/colorLightGary"
        android:id="@+id/divider1"
        android:layout_centerHorizontal="true"/>



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circle"
        android:layout_below="@+id/divider1"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/card1"
        android:layout_below="@+id/divider1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/card1"/>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circle"
        android:layout_below="@+id/divider1"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/card1"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/card2"
        android:layout_below="@+id/divider1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:id="@+id/card2"
        android:layout_toRightOf="@+id/card1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/linearfive">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Skip"
                android:id="@+id/skip"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/button_background_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/button_background"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
