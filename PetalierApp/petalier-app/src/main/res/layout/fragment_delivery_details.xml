        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:id="@+id/linear"
            android:layout_below="@+id/app_bar"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/txtdeldate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Delivery"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_deldate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtspecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Instructions"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorLightGary"
                android:id="@+id/divider2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtfullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_name"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_contact"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_email"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorLightGary"
                android:id="@+id/divider3"/>

            <TextView
                android:id="@+id/txtlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/txtgprs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn on GPRS"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtstreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street Address"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appartment, Suite, Unit, etc. (Optional)"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txttown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Town or City"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State or City"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtpostal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postal Code or Zip Code"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_postal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGary"
            android:id="@+id/divider4"
            android:layout_marginBottom="20dp"
            />


        <LinearLayout
            android:layout_below="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/linear2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Order More"
                    android:id="@+id/btnorder"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextWhite"
                    android:background="@drawable/button_background_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Checkout Now"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextWhite"
                    android:background="@drawable/button_background"/>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>




</ScrollView>
