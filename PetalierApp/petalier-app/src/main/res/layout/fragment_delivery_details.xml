        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:id="@+id/linear"
            android:layout_below="@+id/app_bar"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/txtdeldate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Delivery"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_deldate"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorLightGary"/>


                <TextView
                    android:id="@+id/txtdisclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please be advised that we have a cut-off at 2:00PM"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txtdisclaimer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Philippine Standard Time) for next-day deliveries"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txtdisclaimer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our delivery hours are from 10:00AM - 3:00PM, depending on"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txtdisclaimer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="the delivery route of the day. Thank you!"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"/>


            </LinearLayout>



            <View
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorLightGary"
                android:id="@+id/divider2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtspecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Instructions"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtfname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient First Name"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_name"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtlname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient Last Name"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_name"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient Contact Number"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_contact"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:inputType="number"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_email"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorLightGary"
                android:id="@+id/divider3"/>

            <TextView
                android:id="@+id/txtlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtgprs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn on GPRS"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtstreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House/Lot/Unit #/Street Name"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/edit_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subd./Apt./Condo/Bldg."
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/edit_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txttown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtlandmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Landmark"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_small_box"
                    android:drawableLeft="@drawable/ic_location"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:paddingRight="10dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorLightGary"/>






            </LinearLayout>

