                    <!--android:paddingRight="10dp"-->
                    <!--android:drawablePadding="5dp"-->
                    <!--android:textColor="@color/colorLightGary"/>-->

            <!--</LinearLayout>-->



        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/relativedis">


            <TextView
                android:id="@+id/txt1"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Please review the details above before sending the form."/>

            <TextView
                android:id="@+id/txt2"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/txt1"
                android:text="After sending, you may no longer edit your boxed blooms."/>

            <TextView
                android:id="@+id/txt3"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/txt2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="For changes in the delivery address and/or note, please feel free to contact us before the delivery schedule."/>


        </RelativeLayout>


        <View
            android:layout_marginTop="20dp"
            android:layout_below="@+id/relativedis"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGary"
            android:id="@+id/divider4"
            android:layout_marginBottom="20dp"
            />


        <LinearLayout
            android:layout_below="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/linear2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Order More"
                    android:id="@+id/btnorder"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextWhite"
                    android:background="@drawable/button_background_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Checkout Now"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextWhite"
                    android:background="@drawable/button_background"/>

            </LinearLayout>

        </LinearLayout>



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:id="@+id/loading"
            android:visibility="visible"/>



    </RelativeLayout>




</ScrollView>
