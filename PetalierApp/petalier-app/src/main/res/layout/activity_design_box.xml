<?xml version="1.0" encoding="utf-8"?>
<com.syaona.petalierapp.photo.CustomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:id="@+id/scrollView"
    tools:context=".activity.DesignBoxActivity">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout">

        <include
            android:id="@+id/app_bar_design"
            layout="@layout/app_bar_design" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar_design"
            android:id="@+id/relative">

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/flower3d"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:layout_marginRight="30dp"-->
                <!--/>-->

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/relative"
            android:id="@+id/linearone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/flowername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorButtonInactive"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/flowerprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginLeft="60dp"/>
            </LinearLayout>

        </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productexcerpt"
            android:layout_below="@+id/linearone"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>








        <!--trial for layout refresh-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/productexcerpt"
            android:id="@+id/linearseven">

            <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="horizontal"-->
                <!--android:gravity="center_vertical"-->
                <!--android:layout_marginRight="10dp">-->

                <!--<Button-->
                    <!--android:id="@+id/btnrefresh"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="Reset"-->
                    <!--android:visibility="gone"-->
                    <!--android:textColor="@color/colorTextWhite"-->
                    <!--android:background="@drawable/button_background"/>-->

            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp">

                <Button
                    android:id="@+id/btnpreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Preview"
                    android:textColor="@color/colorTextWhite"
                    android:background="@drawable/button_background"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>











        <View
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linearseven"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorFieldIcon"
            android:id="@+id/divider"/>


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Choose "-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:textSize="17sp"-->
            <!--android:id="@+id/textcolorchoose"-->
            <!--android:layout_below="@+id/divider"/>-->


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Color"-->
            <!--android:textColor="@color/colorButtonInactive"-->
            <!--android:textSize="17sp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginBottom="20dp"-->
            <!--android:id="@+id/textchoosecolor"-->
            <!--android:layout_below="@+id/divider"-->
            <!--android:layout_toRightOf="@+id/textcolorchoose"/>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:gravity="center_horizontal"
            android:id="@+id/relative4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose "
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:id="@+id/textcolorchoose"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textColor="@color/colorButtonInactive"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/textchoosecolor"
                android:layout_toRightOf="@+id/textcolorchoose"/>

        </RelativeLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please refer to our color calendar for the"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:layout_below="@+id/relative4"
            android:id="@+id/textdisclaimer"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="availability of the roses"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:layout_below="@+id/textdisclaimer"
            android:id="@+id/textdisclaimer2"/>




        <Button
            android:id="@+id/btncolorcalendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Color Calendar"
            android:textColor="@color/colorTextWhite"
            android:background="@drawable/button_background"
            android:layout_below="@+id/textdisclaimer2"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btncolorcalendar"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGary"
            android:id="@+id/divider1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Color"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:id="@+id/textcolorchoose1"
            android:layout_below="@+id/divider1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Regular)"
            android:layout_below="@+id/textcolorchoose1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorButtonInactive"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/regular"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listview_color_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_below="@+id/regular"
            android:layout_marginLeft="10dp"
            />


        <View
            android:layout_marginTop="20dp"
            android:layout_below="@+id/listview_color_regular"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGary"
            android:id="@+id/divider2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Color"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:id="@+id/textcolorchoose2"
            android:layout_below="@+id/divider2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Special)"
            android:layout_below="@+id/textcolorchoose2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorButtonInactive"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/special"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listview_color_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_below="@+id/special"
            android:layout_marginLeft="10dp"
            />


        <com.syaona.petalierapp.view.ExpandableHeightGridView
            android:id="@+id/gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp"
            android:layout_below="@+id/divider2"
            android:layout_marginTop="10dp"
            />



        <View
            android:layout_marginTop="20dp"
            android:layout_below="@+id/listview_color_special"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGary"
            android:id="@+id/divider3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:gravity="center_horizontal"
            android:id="@+id/relative2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose "
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:id="@+id/textcolorchoose3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Box Color"
                android:textColor="@color/colorButtonInactive"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/boxcolor"
                android:layout_toRightOf="@+id/textcolorchoose3"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/relative2"
            android:id="@+id/linearfive">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/btnblack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Black"
                    android:textColor="@color/colorTextWhite"
                    android:background="@drawable/button_box"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <Button
                    android:id="@+id/btnwhite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="White"
                    android:textColor="@color/colorTextWhite"
                    android:background="@drawable/button_box"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linearfive"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorLightGary"
            android:id="@+id/divider4"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider4"
            android:gravity="center_horizontal"
            android:id="@+id/relative3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose "
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:id="@+id/textcolorchoose4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="@color/colorButtonInactive"
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/quantity"
                android:layout_toRightOf="@+id/textcolorchoose4"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/orderbackground"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/txtquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorTextWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:id="@+id/linearsix"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10dp">

                    <ImageButton
                        android:id="@+id/btnminus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="Black"
                        android:background="@drawable/button_minus"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <ImageButton
                        android:id="@+id/btnadd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="Black"
                        android:background="@drawable/button_add"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:id="@+id/loading"
            android:visibility="visible"/>




    </RelativeLayout>






</com.syaona.petalierapp.photo.CustomScrollView>
